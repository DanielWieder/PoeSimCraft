<UserControl x:Class="PoeCrafting.UI.Controls.SubconditionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoeCrafting.UI"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">

    <DockPanel>

        <ComboBox DockPanel.Dock="Top" HorizontalAlignment="Right" MinWidth="80"/>

        <ContentControl DockPanel.Dock="Top" Content="{Binding PrefixConditions}"/>
        <ContentControl DockPanel.Dock="Top"  Content="{Binding SuffixConditions}"/>
        <ContentControl DockPanel.Dock="Top" Content="{Binding MetaConditions}"/>
    </DockPanel>

</UserControl>
